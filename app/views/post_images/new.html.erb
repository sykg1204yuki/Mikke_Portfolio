<h2><strong>新規投稿</strong></h2>

<%= form_with model: @post_image, local: true do |f| %>

  <div class="field">
    <%= f.label '画像選択' %><br />
    <%= f.attachment_field :image %>
  </div>

  <div class="field">
    <%= f.label 'タイトル' %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label '本文' %><br />
    <%= f.text_area :caption, rows:'5' %>
  </div>

  <div class="field">
    <%= f.submit '投稿' %>
  </div>

<% end %>